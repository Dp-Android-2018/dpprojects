<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_schedule_class_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15w"
        android:layout_marginStart="@dimen/dp15w"
        android:layout_marginEnd="@dimen/dp15w"
        android:layout_toStartOf="@+id/tv_schedule_time"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_schedule_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Name #1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_schedule_class_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First grade"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_schedule_class_number_of_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 Student"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp5w"
        android:layout_marginStart="@dimen/dp15w"
        android:scaleType="centerCrop"
        android:textStyle="bold"
        android:text="11:30 am"
        android:textColor="@color/colorLightBlue"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_calender_off" />

    <View
        android:layout_below="@+id/ll_schedule_class_container"
        android:layout_marginTop="@dimen/dp10h"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"
        />
</RelativeLayout>