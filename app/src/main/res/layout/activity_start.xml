<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dp.school.StartActivity">



    <FrameLayout

        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rl_start_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/iv_start_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp2w"
            android:src="@drawable/ic_action_menu" />

        <ImageView
            android:id="@+id/iv_start_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp2w"
            android:src="@drawable/ic_action_chat" />
    </RelativeLayout>

    <com.eightbitlab.bottomnavigationbar.BottomNavigationBar
        android:layout_alignParentBottom="true"
        android:id="@+id/nb_start_tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:activeTabColor="@color/colorPrimary"
        app:inactiveTabColor="@color/colorGray"/>
</RelativeLayout>
