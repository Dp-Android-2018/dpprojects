<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dp5w">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_feed_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150h"
            android:scaleType="fitXY"
            android:src="@drawable/temp_students" />

        <TextView
            android:id="@+id/tv_feed_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_feed_photo"
            android:layout_margin="@dimen/dp2w"
            android:text="Lorem ipsum dolor sit amet, consector adipicing elit,sed do eiusmod tempor incididunt ut labore et dolore magna aliqa. Ut num ad vertual btubs"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_feed_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_feed_details"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/sp12"
            android:layout_margin="@dimen/dp2w"

            android:text="@string/label_read_more"
            android:textColor="@color/colorLightBlue" />
    </RelativeLayout>

</RelativeLayout>