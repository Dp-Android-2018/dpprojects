        android:layout_marginStart="@dimen/dp10w"
        android:layout_marginEnd="@dimen/dp10w"
        android:layout_below="@+id/toolbar"
        android:gravity="center_vertical"
        android:id="@+id/rl_assigment_data"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_assignment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title Assignment "
            android:layout_alignParentStart="true"
            android:textColor="@color/colorBlack"
            android:maxLines="3"
            android:scrollbars = "vertical"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="3"
          />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp5w"
           >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_points_num"
            android:text="50"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_points_text"
                android:text="@string/point"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp5w"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1h"
        android:layout_below="@+id/rl_assigment_data"
        android:background="@color/colorGray"
        android:id="@+id/view1"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp160h"
        android:id="@+id/rl_assigment_describtion"
        android:layout_below="@+id/view1"
        android:layout_marginStart="@dimen/dp10w"
        android:layout_marginEnd="@dimen/dp10w"
        android:layout_marginTop="@dimen/dp10h">
        <TextView
            android:id="@+id/tv_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/describtion"
