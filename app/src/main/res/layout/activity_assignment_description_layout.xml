    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1h"
        android:layout_below="@+id/rl_assigment_describtion"
        android:background="@color/colorGray"
        android:id="@+id/view2"
        android:layout_marginTop="@dimen/dp10h"/>

    <Button
        android:layout_width="@dimen/dp100h"
        android:layout_height="@dimen/dp30h"
        android:id="@+id/btn_file_download"
       android:layout_below="@+id/view2"
        android:layout_marginTop="@dimen/dp15h"
        android:layout_marginBottom="@dimen/dp15h"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_rounded_assignment"
        android:text="@string/file_download"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1h"
        android:layout_below="@+id/btn_file_download"
        android:background="@color/colorGray"
        android:id="@+id/view3"
       />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80h"
        android:id="@+id/rl_upload_assignment"
        android:layout_below="@+id/view3"
        android:layout_marginStart="@dimen/dp10w"
        android:layout_marginEnd="@dimen/dp10w"
        android:layout_marginTop="@dimen/dp10h">
        <TextView
            android:id="@+id/tv_finish_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish_the_assignment"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_file_upload"
            android:layout_below="@+id/tv_finish_assignment"
            android:layout_marginTop="@dimen/dp25h"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/file_upload"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_centerVertical="true"



            />

        <Button
            android:id="@+id/btn_upload"
            android:layout_marginTop="@dimen/dp25h"
            android:layout_width="@dimen/dp70h"
            android:layout_height="@dimen/dp20h"
            android:layout_below="@+id/tv_finish_assignment"
            android:layout_toEndOf="@+id/tv_file_upload"
            android:background="@drawable/btn_rounded_assignment"
            android:text="@string/upload"
            android:textAllCaps="false"

            android:layout_marginStart="@dimen/dp15w"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1h"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_upload_assignment"
        android:background="@color/colorGray" />


    <Button
        android:layout_width="@dimen/dp120h"
        android:layout_height="@dimen/dp35h"
        android:id="@+id/btn_send"

        android:layout_marginTop="@dimen/dp15h"
        android:layout_marginBottom="@dimen/dp15h"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_rounded_assignment"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />
</RelativeLayout>