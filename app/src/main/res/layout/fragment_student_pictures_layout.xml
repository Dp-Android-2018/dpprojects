<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ll_container">



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_pictures"
        android:numColumns="auto_fit"
        android:layout_margin="@dimen/dp10w"
        android:verticalSpacing="@dimen/dp5w"
        android:horizontalSpacing="@dimen/dp5w"
        tools:listitem="@layout/item_picture_layout"></android.support.v7.widget.RecyclerView>
</LinearLayout>