<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_assignment_student_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp5h"
        android:paddingTop="@dimen/dp5h">
        <TextView
            android:id="@+id/tv_assignment_student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp15w"
            android:layout_marginStart="@dimen/dp5w"
            android:layout_toEndOf="@+id/iv_assignment_student_photo"
            android:layout_toStartOf="@+id/tv_assignment_student_assignment"
            android:text="Class Name #1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_assignment_student_container"
        android:background="@color/colorGray" />


</RelativeLayout>