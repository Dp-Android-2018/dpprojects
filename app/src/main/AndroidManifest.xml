<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dp.school">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:icon">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".activity.ParentLoginActivity" />
        <activity android:name=".activity.StudentLoginActivity" />
        <activity android:name=".activity.TeacherLoginActivity" />
        <activity android:name=".activity.AssignmentsActivity" />
        <activity
            android:name=".activity.CalenderActivity"
            android:label="@string/title_activity_calender"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".StartActivity"></activity>
        <activity android:name=".activity.PaymentActivity"></activity>
        <activity android:name=".activity.StudentDetailsActivity" />
        <activity android:name=".activity.StudentsActivity" />
        <activity android:name=".activity.FeedsActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".MenuActivity">

        </activity>
    </application>

</manifest>