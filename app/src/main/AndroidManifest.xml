<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dp.school">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utility.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:icon">
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".views.ui.activity.StudentLoginActivity" />
        <activity android:name=".views.ui.activity.ParentLoginActivity" />
        <activity android:name=".views.ui.activity.TeacherLoginActivity" />
        <activity android:name=".views.ui.activity.AssignmentsActivity" />
        <activity
            android:name=".views.ui.activity.CalenderActivity"
            android:label="@string/title_activity_calender"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".views.ui.activity.Main2Activity" />
        <activity android:name=".views.ui.activity.MainActivity"></activity>
        <activity android:name=".views.ui.activity.PaymentActivity" />
        <activity android:name=".views.ui.activity.StudentDetailsActivity" />
        <activity android:name=".views.ui.activity.StudentsActivity" />
        <activity android:name=".views.ui.activity.FeedsActivity"></activity>
        <activity android:name=".views.ui.activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ui.activity.MenuActivity"></activity>
        <activity android:name=".views.ui.activity.ErrorActivity"></activity>
        <activity android:name=".views.ui.activity.FeedDetailsActivity"/>
        <activity android:name=".views.ui.activity.TopStudentDetailsActivity"/>
        <activity android:name=".views.ui.activity.ClassActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>